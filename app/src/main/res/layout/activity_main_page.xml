<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MainPage">

        <FrameLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:background="@drawable/top_bar"
            android:layout_height="60dp"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:text="Home"
                android:textAllCaps="true"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/sixteen_sp" />

        </FrameLayout>

    <include layout="@layout/content_main" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="-50dp"
        android:background="@color/purple"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home_purple" />

            <TextView
                android:id="@+id/tv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/messages_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_messages_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_chat_purple" />

            <TextView
                android:id="@+id/tv_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/task_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_task_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_task_purple" />

            <TextView
                android:id="@+id/tv_task"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/notify_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_notify_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_notification_purple" />

            <TextView
                android:id="@+id/tv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notify"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_profile_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_profile_purple" />

            <TextView
                android:id="@+id/tv_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_menu_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_menu_purple" />

            <TextView
                android:id="@+id/tv_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/whiteColor"
                android:textSize="@dimen/twelve_sp"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>