<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="4dp"
            android:src="@drawable/ic_cancel"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_button"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="20dp"
            android:text="Custom Invoice"
            android:textAllCaps="false"
            android:textSize="@dimen/fourteen_sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/greyForText" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2dp"
        android:background="@drawable/bg_invoice"
        android:orientation="vertical"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price:"
                android:textColor="@color/greyForText"
                android:textSize="@dimen/twelve_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ "
                android:textSize="@dimen/twelve_sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:hint="3000"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/twelve_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due Date:"
                android:textColor="@color/greyForText"
                android:textSize="@dimen/twelve_sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="17/02/2020"
                android:textSize="@dimen/twelve_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Security Amount"
                android:textColor="@color/greyForText"
                android:textSize="@dimen/twelve_sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ "
                android:textSize="@dimen/twelve_sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@android:color/transparent"
                android:hint="300"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="@dimen/twelve_sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trades"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_invoice_trades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_items_trades" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return Trade"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_invoice_return_trades"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/row_items_trades" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/blackColor"
                android:textSize="@dimen/sixteen_sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Description text here....."
                android:textSize="@dimen/twelve_sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/send_invoice"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="20dp"
            android:text="Send"
            android:textAllCaps="false"
            android:textColor="@color/greyForText" />

    </LinearLayout>


</LinearLayout>