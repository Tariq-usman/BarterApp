<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ServicesActivity">

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/top_bar"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_back_services"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:text="Make Offer"
            android:textAllCaps="true"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sixteen_sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="6dp"
                        android:src="@drawable/design" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Title"
                                android:textStyle="bold"
                                android:textColor="@color/greyForText"
                                android:layout_marginBottom="4dp"
                                android:textSize="@dimen/twelve_sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/greyForText"
                                android:text="Graphic Design"
                                android:textSize="@dimen/fourteen_sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="8dp"
                            android:background="@color/lightGrey"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="18dp"
                        android:src="@drawable/ic_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Description"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp"
                                android:textColor="@color/greyForText"
                                android:textSize="@dimen/twelve_sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/greyForText"
                                android:text="Descripton of service.........."
                                android:textSize="@dimen/fourteen_sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="8dp"
                            android:background="@color/lightGrey"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="6dp"
                        android:src="@drawable/notification_image" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Posted By"
                            android:textColor="@color/greyForText"
                            android:layout_marginBottom="4dp"
                            android:textSize="@dimen/twelve_sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_height="wrap_content"
                            android:text="Adam"
                            android:textColor="@color/greyForText"
                            android:textStyle="bold"
                            android:textSize="@dimen/fourteen_sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="8dp"
                            android:background="@color/lightGrey"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"
                        android:text="2 hours ago"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginBottom="4dp"
                                android:layout_height="wrap_content"
                                android:text="Trades"
                                android:textColor="@color/greyForText"
                                android:textStyle="bold"
                                android:textSize="@dimen/fourteen_sp" />
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:listitem="@layout/row_items_trades"
                                android:id="@+id/recycler_view_services_trades"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="8dp"
                            android:background="@color/lightGrey"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="14dp"
                        android:src="@drawable/ic_location_empty" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/greyForText"
                                android:text="Location"
                                android:textStyle="bold"
                                android:layout_marginBottom="4dp"
                                android:textSize="@dimen/twelve_sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/greyForText"
                                android:text="Islamabad"
                                android:textSize="@dimen/fourteen_sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="8dp"
                            android:background="@color/lightGrey"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="18dp"
                        android:src="@drawable/ic_calendr" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Due Date"
                                android:textStyle="bold"
                                android:textColor="@color/greyForText"
                                android:layout_marginBottom="4dp"
                                android:textSize="@dimen/twelve_sp" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/greyForText"
                                android:text="12/02/2020"
                                android:textSize="@dimen/fourteen_sp" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:layout_gravity="bottom"
                            android:layout_marginTop="8dp"
                            android:background="@color/lightGrey"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_weight=".4"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_service_details_button"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services Estimated Budget"
            android:layout_marginVertical="4dp"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/twelve_sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:text="Rs 3000"
            android:textStyle="bold"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/fourteen_sp" />
        <Button
            android:id="@+id/trade_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="20dp"
            android:text="Make offer"
            android:textAllCaps="false"
            android:textColor="@color/greyForText" />
    </LinearLayout>


</LinearLayout>