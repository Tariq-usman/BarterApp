<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.TaskDueDate">

    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/top_bar"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_back_service_due_date"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:text="Add Task"
            android:textAllCaps="true"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sixteen_sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Pick a due date"
                android:textColor="@color/purple"
                android:textSize="@dimen/fourteen_sp" />

            <LinearLayout
                android:id="@+id/date_layout_add_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightGreyForBG"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendr" />

                <TextView
                    android:id="@+id/date_view_add_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="15/Feb/2020"
                    android:textColor="@color/purple"
                    android:textSize="@dimen/fourteen_sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Your estimated budget estimate?"
                android:textColor="@color/purple"
                android:textSize="@dimen/fourteen_sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/lightGreyForBG"
                android:inputType="text"
                android:hint="$500"
                android:paddingHorizontal="10dp"
                android:textColor="@color/purple"
                android:textColorHint="@color/purple"
                android:textSize="@dimen/fourteen_sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/post_btn_due_date"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="20dp"
            android:text="Post"
            android:textAllCaps="false"
            android:textColor="@color/greyForText" />

    </LinearLayout>

</LinearLayout>