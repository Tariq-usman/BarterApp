<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ChangePassword">
    <FrameLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/top_bar"
        android:orientation="horizontal"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_back_change_pass"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="50dp"
            android:gravity="center"
            android:text="Change Password"
            android:textAllCaps="true"
            android:textColor="@color/whiteColor"
            android:textSize="@dimen/sixteen_sp" />

    </FrameLayout>
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginVertical="30dp"
    android:src="@drawable/lock"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_old_pass_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Old password"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/greyForText"
                android:textColorHint="@color/greyForText"
                android:textSize="@dimen/fourteen_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyForText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_new_pass_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="New password"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/greyForText"
                android:textColorHint="@color/greyForText"
                android:textSize="@dimen/fourteen_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyForText" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_confirm_pass_cp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Confirm password"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/greyForText"
                android:textColorHint="@color/greyForText"
                android:textSize="@dimen/fourteen_sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greyForText" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_save_pass"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="20dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/greyForText" />

    </LinearLayout>

</LinearLayout>